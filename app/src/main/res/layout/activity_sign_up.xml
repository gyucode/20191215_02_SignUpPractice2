<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="E-mail"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:hint="이메일을 입력하세요"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="Password"/>

            <EditText
                android:id="@+id/pwEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:hint="비밀번호를 입력하세요(8글자 이상)"/>

            <TextView
                android:id="@+id/pwStateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:text="비밀번호가 입력되지 않았습니다"
                android:layout_marginTop="5dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password Repeat"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:hint="비밀번호를 다시 입력하세요"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:layout_marginTop="5dp"
                android:text="비밀번호 확인이 입력되지 않았습니다."
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="이름"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:hint="이름을 입력하세요"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="폰번"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:inputType="phone"
                android:singleLine="true"
                android:hint="폰번 입력하세요"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:text="생년월일 /시간"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/birthDayTxt"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:hint="생년월일"/>
                <TextView
                    android:id="@+id/birthTimeTxt"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:hint="태어난 시간"/>

            </LinearLayout>

            <TextView
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직업"/>

            <Spinner
                android:id="@+id/jobSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/jobs"
                android:spinnerMode="dialog"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="회원가입하기"

                />

        </LinearLayout>


    </ScrollView>




</LinearLayout>